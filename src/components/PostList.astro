---
import PostListItem from './PostListItem.astro'

export interface Props {
  posts: any[];
}

const { posts } = Astro.props;
---

<style>
    ol {
        padding-inline-start: 0;
        list-style: none;
    }
</style>

<ol>
    {
        posts.map((post) => {
            return (
                <PostListItem post={post} />
            )
        })
    }
</ol>